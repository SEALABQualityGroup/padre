<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="prova.plugin.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="prova.plugin.commands.category"
            id="prova.plugin.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="prova.plugin.commands.sampleCommand"
            class="plugin.handlers.ProvaHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="prova.plugin.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="prova.plugin.toolbars.sampleToolbar">
            <command
                  commandId="prova.plugin.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Visual Builder"
                  id="prova.plugin.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="view.Operations"
            id="view.Operations"
            name="Operations"
            restorable="true">
      </view>
      <view
            class="view.F_OperationsOnDB"
            id="view.F_OperationsOnDB"
            name="F_OperationsOnDB"
            restorable="true">
      </view>
      <view
            class="view.Thresholds_OnDB"
            id="view.Thresholds_OnDB"
            name="Thresholds_OnDB"
            restorable="true">
      </view>
      <view
            class="view.Do_OperationsOnDB"
            id="view.Do_OperationsOnDB"
            name="Do_OperationsOnDB"
            restorable="true">
      </view>
      <view
            class="view.EVLtree"
            icon="icons/evl.gif"
            id="view.EVLtree"
            name="EVLtree"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="perspectives.Visual_Builder"
            id="perspectives.newper"
            name="EVL Visual Builder">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="perspectives.newper">
         <actionSet
               id="org.eclipse.debug.ui.launchActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="editors.LocalEolEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="false"
            extensions="eol, eunit"
            icon="icons/eol.gif"
            id="editors.LocalEolEditor"
            name="LocalEolEditor">
      </editor>
      <editor
            class="editors.EolEditorForDB"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="false"
            extensions="eol, eunit"
            icon="icons/eol.gif"
            id="editors.EolEditorForDB"
            name="EolEditorForDB">
      </editor>
   </extension>

</plugin>
